/* pages/class-detail/class-detail.wxss */
.container {
  padding: 20rpx 0;
  min-height: 100vh;
  background-color: #f7f8fa;
  box-sizing: border-box;
}

.content {
  padding-bottom: 200rpx; /* Add padding to the bottom */
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.ml-2 {
  margin-left: 10rpx;
}

.password-text {
  font-family: monospace;
  background-color: #eee;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.actions-container {
  margin: 40rpx 20rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
}

.actions-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
  color: #333;
}

.van-radio-group--horizontal {
  display: flex;
  justify-content: space-around;
}

.van-radio {
  margin: 10rpx 0;
}

.radio-status-on .van-radio__label {
  color: #07c160 !important;
}

.radio-status-leaving .van-radio__label {
  color: #ff976a !important;
}

.radio-status-off .van-radio__label {
  color: #969799 !important;
}
